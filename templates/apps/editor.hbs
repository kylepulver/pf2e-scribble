<form>
    <h1>Scribble Editor</h1>
    <div style="display:flex">

    <div class="editor" style="flex: 0 0 50%;padding-right:1px">
        <h3>Setup</h3>
    <textarea name="setup" style="min-height:600px">{{setup}}</textarea>
    </div>
    <div class="editor" style="flex: 0 0 50%;padding-left:1px">
        <h3>Play</h3>
    <textarea name="play" style="min-height:600px">{{play}}</textarea>
    </div>

    </div>
    <div class="form-group buttons">
        <button type="submit">Save Changes</button>
        <button type="close">Discard Changes</button>
    </div>
</form>